<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.google.android.material.slider.Slider
        android:id="@+id/leftRightSeekBar"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="-3"
        android:valueTo="3"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:thumbColor="?attr/colorOnPrimary"
        app:tickColor="?attr/colorOnPrimary"
        app:trackColor="?attr/colorPrimary"
        app:trackHeight="16dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/accelerateDecelerateSeekBar"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="130dp"
        android:rotation="270"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="-2"
        android:valueTo="4"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="@+id/leftRightSeekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:thumbColor="?attr/colorOnPrimary"
        app:tickColor="?attr/colorOnPrimary"
        app:trackColor="?attr/colorPrimary"
        app:trackHeight="16dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accelerateDecelerateSeekBar"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/button_left_blinker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L4_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/left_blinker_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_right_blinker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L3_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/right_blinker_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_blank"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="invisible"
                app:cornerRadius="40dp"
                app:icon="@drawable/baseline_settings_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_stop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/D1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/stop_icon_v2_100"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#00FFFFFF"
                app:iconTintMode="screen"
                app:itemIconTint="?attr/colorOnPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/button_left_parking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/P3_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/left_parking_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_right_parking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/P1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/right_parking_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_driving_lights"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/headlight_icon_v2_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_rgb_stripe"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L2_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/led_strip_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-138dp"
        android:layout_marginTop="-125dp"
        android:src="@drawable/forward_indication_icon_v1_40"
        app:layout_constraintStart_toEndOf="@+id/accelerateDecelerateSeekBar"
        app:layout_constraintTop_toTopOf="@+id/accelerateDecelerateSeekBar" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-138dp"
        android:layout_marginBottom="-125dp"
        android:src="@drawable/backward_indication_icon_v1_40"
        app:layout_constraintBottom_toBottomOf="@+id/accelerateDecelerateSeekBar"
        app:layout_constraintStart_toEndOf="@+id/accelerateDecelerateSeekBar" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-138dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/zero_fb_indication_icon_v1_40"
        app:layout_constraintStart_toEndOf="@+id/accelerateDecelerateSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/left_indication_icon_v1_40"
        app:layout_constraintBottom_toTopOf="@+id/leftRightSeekBar"
        app:layout_constraintStart_toStartOf="@+id/leftRightSeekBar" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/right_indication_icon_v1_40"
        app:layout_constraintBottom_toTopOf="@+id/leftRightSeekBar"
        app:layout_constraintEnd_toEndOf="@+id/leftRightSeekBar" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/zero_lr_indication_icon_v1_40"
        app:layout_constraintBottom_toTopOf="@+id/leftRightSeekBar"
        app:layout_constraintEnd_toStartOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView11" />

</androidx.constraintlayout.widget.ConstraintLayout>