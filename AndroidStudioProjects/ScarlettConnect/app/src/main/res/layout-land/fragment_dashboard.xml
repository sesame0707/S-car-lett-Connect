<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="500dp"
        android:layout_height="32dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginStart="-20dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar2"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/button_left_blinker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L4_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/left_blinker_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_right_blinker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L3_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/right_blinker_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_blank"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="invisible"
                app:cornerRadius="40dp"
                app:icon="@drawable/baseline_settings_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_stop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/D1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/stop_icon_v2_100"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#00FFFFFF"
                app:iconTintMode="screen"
                app:itemIconTint="?attr/colorOnPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/button_left_parking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/P3_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/left_parking_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_right_parking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/P1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/right_parking_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_driving_lights"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L1_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/headlight_icon_v2_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/button_rgb_stripe"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:checkable="false"
                android:contentDescription="@string/L2_description"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                app:icon="@drawable/led_strip_icon_v1_80"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:itemIconTint="?attr/colorOnPrimary" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>